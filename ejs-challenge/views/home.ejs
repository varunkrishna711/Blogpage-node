<%- include("partials/header") -%>

<h1>Home</h1>
<p> <%= startingContent %> </p>

<% posts.forEach( (post) => { %>
        <h1> <%= post.title %> </h1>
        <p>
             <%= post.content.substring(0,100) + "..." %>
            <a href="/posts/<%= post.title %>">Read More</a>

        </p>
<% }) %>    

<%- include("partials/footer") -%>

<!-- forEach() method gets each value of a post in the array (like map method)-->